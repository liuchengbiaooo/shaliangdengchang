page {
    background-color: #35354a;
}

.language_text {
    color: #999;
}

.language {
    width: 100%;
    box-sizing: border-box;
    padding: 0rpx 24rpx;
}

.radio_language {
    box-sizing: border-box;
    width: 100%;
    display: flex;
    height: 80rpx;
    justify-content: space-between;
    margin-top: 15rpx;
    border-radius: 14rpx;
    line-height: 80rpx;
    padding: 0rpx 12rpx;
}

.radio_bor {
    border: 1rpx solid #1212c5;
}

.radio_text {
    color: #fff;
}

radio {
    transform: scale(0.7);
}

.btn {
    margin-top: 15rpx;
}