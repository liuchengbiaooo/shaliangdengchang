.questionnaire{
  padding: 30rpx;
}
.item{
  padding: 20rpx 0;
  box-sizing: border-box;
}
.item-tit{
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}
.item-content{
  font-size: 28rpx;
  color: #999999;
}
.radio-group{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  line-height: 60rpx;
}
.radio-group_2{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  line-height: 60rpx;
}
.radio{
  min-width: 33.3%;
  display: flex;
}
.item-input{
  border-bottom: 1rpx solid #999;
  margin-left: 10rpx;
  padding-left: 10rpx;
}
radio .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
}
.btnbox{
  width: 100%;
  padding: 50rpx 50rpx 0 50rpx;
  box-sizing: border-box;
}
.submit-btn{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f7ca49;
  color: #fff;
}

.pop{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .8);
  z-index: 100;
}
.pop-img{
  width: 628rpx;
  /* height: 515rpx; */
  height: 400rpx;
  position: absolute;
  /* top: 200rpx; */
  top: 320rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
}
.pop-text{
  position: absolute;
  top: 484rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 310rpx;
  font-size: 30rpx;
  color: #ff494b;
  text-align: center;
  line-height: 40rpx;
  z-index: 999;
}
.pop-mini{
  font-size: 22rpx;
  color: #333;
}